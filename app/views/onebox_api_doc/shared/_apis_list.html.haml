        %span.url /my/url/:id
      = link_to '/', class: 'item api__url' do
        %span.action.post POST
        %span.url /my/url/:id
      = link_to '/', class: 'item api__url' do
        %span.action.put PUT
        %span.url /my/url/:id
      = link_to '/', class: 'item api__url' do
        %span.action.patch PATCH
        %span.url /my/url/:id
      = link_to '/', class: 'item api__url' do
        %span.action.delete DELETE
        %span.url /my/url/:id